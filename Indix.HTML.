<body>
    <h1>Torche Web</h1>
    <p>Cliquez sur le bouton pour allumer/√©teindre la lumi√®re de la page.</p>

    <button id="torch-button">Allumer la Torche</button>

    <script>
        // JavaScript pour l'action
        document.addEventListener('DOMContentLoaded', (event) => {
            const button = document.getElementById('torch-button');
            const body = document.body;
            let isLightOn = false;

            button.addEventListener('click', () => {
                isLightOn = !isLightOn; // Inverse l'√©tat (true devient false, false devient true)
                body.classList.toggle('light-on'); // Ajoute ou retire la classe CSS

                if (isLightOn) {
                    button.textContent = '√âteindre la Torche';
                    // Optionnel : afficher un symbole de lumi√®re
                    body.querySelector('h1').textContent = 'Torche Web üí°';
                } else {
                    button.textContent = 'Allumer la Torche';
                    body.querySelector('h1').textContent = 'Torche Web';
                }
            });
        });
    </script>
</body>
